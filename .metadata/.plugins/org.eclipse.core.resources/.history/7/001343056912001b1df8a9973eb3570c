		</selectKey>
		INSERT INTO rec_educations 
		VALUES(#{edu_no}, #{u_no}, #{e_edate}, #{e_gdate}, #{e_attendcheck}, #{e_sname}, #{e_majordegree}, #{e_description})
	</insert>
	
